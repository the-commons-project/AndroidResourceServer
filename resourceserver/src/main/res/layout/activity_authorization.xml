<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AuthorizationActivity" android:orientation="vertical">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/activity_authorization.scope_choice_list_view">

    </ListView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">


        <View
                android:layout_width="0dp"
                android:layout_height="1dp" android:id="@+id/view3" android:layout_weight="1"/>
        <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_authorization.cancel_button"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp" android:id="@+id/view4" android:layout_weight="1"/>
        <Button
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_authorization.confirm_button"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp" android:id="@+id/view5" android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>